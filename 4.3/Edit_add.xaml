<Window x:Class="_4._3.Edit_add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._3"
        mc:Ignorable="d"
        Title="Редактирование" Height="330" Width="650" FontSize="14" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="prev2.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFCD0101" Opacity="0.2"/>
        </Grid.Background>
        <Image x:Name="photo" HorizontalAlignment="Left" Height="157" Margin="69,16,0,0" VerticalAlignment="Top" Width="157" Source="ava.png" MouseLeftButtonDown="photo_MouseLeftButtonDown"/>
        <Label x:Name="id" Content="Айди" HorizontalAlignment="Left" Margin="60,182,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="55" Foreground="Cyan" FontWeight="Bold"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="308,56,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="78" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <TextBox x:Name="lastname" HorizontalAlignment="Left" Height="27" Margin="427,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="14" Foreground="#FF0AFFFF" FontWeight="Bold" PreviewTextInput="lastname_PreviewTextInput">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.15"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="308,89,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="55" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <TextBox x:Name="firstname" HorizontalAlignment="Left" Height="27" Margin="427,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="14" Foreground="#FF0AFFFF" FontWeight="Bold" PreviewTextInput="lastname_PreviewTextInput">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.15"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="308,122,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="78" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <TextBox x:Name="patronymic" HorizontalAlignment="Left" Height="27" Margin="427,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="14" Foreground="#FF0AFFFF" FontWeight="Bold" PreviewTextInput="lastname_PreviewTextInput">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.15"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Мыло" HorizontalAlignment="Left" Margin="308,157,0,0" VerticalAlignment="Top" FontSize="14" Height="35" Width="55" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <TextBox x:Name="email" HorizontalAlignment="Left" Height="27" Margin="427,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="14" Foreground="#FF0AFFFF" FontWeight="Bold">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.15"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="308,191,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="78" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <TextBox x:Name="phone" HorizontalAlignment="Left" Height="27" Margin="427,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="14" Foreground="#FF0AFFFF" FontWeight="Bold" PreviewTextInput="phone_PreviewTextInput">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.15"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Пол" HorizontalAlignment="Left" Margin="123,182,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="55" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="308,227,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="118" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <DatePicker x:Name="birthday" HorizontalAlignment="Left" Margin="431,227,0,0" VerticalAlignment="Top" FontSize="14" Height="32" Width="149" Foreground="Black" FontWeight="Bold"/>
        <ComboBox x:Name="gender" HorizontalAlignment="Left" Margin="199,182,0,0" VerticalAlignment="Top" Width="45" FontSize="14" Height="25" Foreground="Black" FontWeight="Bold">
            <ComboBoxItem Content="м" HorizontalAlignment="Left" Width="45"/>
            <ComboBoxItem Content="ж" HorizontalAlignment="Left" Width="45"/>
        </ComboBox>
        <Button Content="X" HorizontalAlignment="Left" Margin="612,10,0,0" VerticalAlignment="Top" Width="28" Click="Exit" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0F5BFF" Offset="1"/>
                    <GradientStop Color="#FF33B1CD"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="39" Margin="531,277,0,0" VerticalAlignment="Top" Width="43" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </Border.Background>
            <Button x:Name="Save" Click="Save_Click" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="save.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Border>
        <Label Content="Сохранить" HorizontalAlignment="Left" Margin="440,278,0,0" VerticalAlignment="Top" FontSize="14" Height="34" Width="91" Foreground="#FF01FBFB" FontWeight="Bold"/>
        <ComboBox x:Name="tagof" HorizontalAlignment="Left" Margin="58,289,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold">
            <ComboBoxItem Content="Xbox Series S" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Playstation 5" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Nintendo Switch" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <WrapPanel x:Name="Tag_panel" HorizontalAlignment="Left" Height="65" Margin="10,216,0,0" VerticalAlignment="Top" Width="293" Loaded="Tag_panel_Loaded">
            <WrapPanel.Background>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </WrapPanel.Background>
        </WrapPanel>
        <Button x:Name="Add_tag" Content="+" HorizontalAlignment="Left" Margin="213,290,0,0" VerticalAlignment="Top" Width="31" Foreground="White" FontWeight="Bold" Click="Add_tag_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD3701F" Offset="1"/>
                    <GradientStop Color="#FFEA2C2C"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
